generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      Role
  createdAt DateTime @default(now())
}

enum Role {
  JOB_SEEKER
  EMPLOYER
}
