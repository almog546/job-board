generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      Role
  createdAt DateTime @default(now())
  jobs      Job[]   
  favorites Favorite[]
}

enum Role {
  JOB_SEEKER
  EMPLOYER
}
model Job {
  id          String   @id @default(cuid())
  employerId  String
  title       String
  description String
  location    String
  createdAt   DateTime @default(now())
  jobtype   String
  isremote  Boolean  @default(false)
  employer   User     @relation(fields: [employerId], references: [id])
  favorites  Favorite[]
}
model Favorite {
  id        String   @id @default(cuid())
  userId    String
  jobId     String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  job       Job      @relation(fields: [jobId], references: [id])
  
}


